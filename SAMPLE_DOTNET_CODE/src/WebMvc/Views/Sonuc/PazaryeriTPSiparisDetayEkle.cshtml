@using WebMvc.Models.PazaryeriTPSiparisDetayEkle;
@model PazaryeriTPSiparisDetayEkleSonucViewModel
@{
    ViewData["Title"] = "PazaryeriTPSiparisDetayEkle";
    ViewData["Menu"] = "8/5";
}
<div class="d-flex justify-content-center mt-2" style="width: 100%">
    <h3>Sipariş Detay Ekleme (Pazaryeri_TP_Siparis_Detay_Ekle)</h3>
</div>
@if (Model.Sonuc is not null)
{
    <div class="pt-2 ps-2" style="width: calc(100% - 40px)">
        @{
            if (Model.Sonuc.Sonuc == "1")
            {
                <div class="alert alert-success" role="alert">
                    Sonuç Başarılı!
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    İşlem Başarısız!
                </div>
            }
        }
    </div>
    <table class="table table-bordered ms-2 mt-2" style="width: calc(100% - 50px)">
        <thead>
            <tr>
                <th scope="col">Parametre</th>
                <th scope="col">Değer</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Sonuc</th>
                <td>@Model.Sonuc.Sonuc</td>
            </tr>
            <tr>
                <th scope="row">Sonuc_Str</th>
                <td>@Model.Sonuc.Sonuc_Str</td>
            </tr>
            <tr>
                <th scope="row">GUID_AltUyeIsyeri</th>
                <td>@Model.Sonuc.GUID_AltUyeIsyeri</td>
            </tr>
            <tr>
                <th scope="row">Tutar_Urun</th>
                <td>@Model.Sonuc.Tutar_Urun</td>
            </tr>
            <tr>
                <th scope="row">Tutar_Odenecek</th>
                <td>@Model.Sonuc.Tutar_Odenecek</td>
            </tr>
            <tr>
                <th scope="row">PYSiparis_GUID</th>
                <td>@Model.Sonuc.PYSiparis_GUID</td>
            </tr>
            <tr>
                <th scope="row">Toplam_Tahsilat_Tutari</th>
                <td>@Model.Sonuc.Toplam_Tahsilat_Tutari</td>
            </tr>
            <tr>
                <th scope="row">Pazaryeri_Limit</th>
                <td>@Model.Sonuc.Pazaryeri_Limit</td>
            </tr>
            <tr>
                <th scope="row">Yeni_Odenecek_Tutar</th>
                <td>@Model.Sonuc.Yeni_Odenecek_Tutar</td>
            </tr>
        </tbody>
    </table>
}
<br />